<?xml version="1.0" encoding="utf-8"?>
<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="200dp"
    android:height="200dp"
    android:viewportWidth="200"
    android:viewportHeight="200">

    <!-- Main needle line from center to 7:30 o'clock position (0 speed) -->
    <path
        android:fillColor="#1AFFFF"
        android:pathData="M100,100 L75,75"
        android:strokeWidth="3"
        android:strokeColor="#1AFFFF"
        android:strokeLineCap="round" />

    <!-- Center pivot circle (smaller) -->
    <path
        android:fillColor="#1AFFFF"
        android:pathData="M100,100 m-6,0 a6,6 0 1,1 12,0 a6,6 0 1,1 -12,0" />

    <!-- Needle tip arrow pointing to 7:30 o'clock -->
    <path
        android:fillColor="#1AFFFF"
        android:pathData="M75,75 L70,80 L80,80 Z" />

</vector>