<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SpeedMeter" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/black</item>
    </style>

    <style name="Theme.SpeedMeter" parent="Base.Theme.SpeedMeter" />

    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_new</item>
        <item name="android:indeterminateDrawable">@drawable/rating_unfill</item>
    </style>
    <style name="CustomTabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <style name="AdAttribution">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:text">Ad</item>
        <item name="android:background">@color/yellow</item>
        <item name="android:width">20dp</item>
        <item name="android:height">20dp</item>
    </style>
</resources>