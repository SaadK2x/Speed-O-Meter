<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueColor"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:src="@drawable/intro_1"
        android:contentDescription="@string/welcome_drive_smarter_nwith_speedometer"
        app:layout_constraintBottom_toTopOf="@id/tvAi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@drawable/gradient_black"
        app:layout_constraintBottom_toBottomOf="@id/imageView2"/>
    <TextView
        android:id="@+id/tvAi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginHorizontal="20sp"
        android:fontFamily="@font/poppins_bold"
        android:gravity="center"
        android:text="@string/welcome_drive_smarter_nwith_speedometer"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        app:layout_constraintBottom_toTopOf="@id/tvNav"/>

    <TextView
        android:id="@+id/tvNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:fontFamily="@font/poppins_regular"
        android:gravity="center"
        android:text="@string/get_real_time_accurate_speed_readings_your_speed_live_and_accurate"
        android:textColor="#898989"
        android:textSize="@dimen/_10sdp"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>