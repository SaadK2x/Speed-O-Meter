<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/blue_shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="8sp">
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/grayColor"
                android:gravity="center"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12sp"
                android:text="Current Speed"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/speedNotifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="1"
                    android:textSize="20sp"
                    android:fontFamily="@font/poppins_bold"/>
                <TextView
                    android:id="@+id/speedNotifiUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayColor"
                    android:layout_marginStart="4sp"
                    android:text="km/h"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:layout_width="1sp"
            android:layout_height="match_parent"
            android:background="@color/grayColor"/>
        <LinearLayout
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayColor"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:text="Distance: "/>
                <TextView
                    android:id="@+id/distanceNotifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="1"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"/>
                <TextView
                    android:id="@+id/distanceNotifiUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayColor"
                    android:layout_marginStart="4sp"
                    android:text="km"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayColor"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:text="Avg.Speed: "/>
                <TextView
                    android:id="@+id/avgSpeedNotifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="1"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"/>
                <TextView
                    android:id="@+id/avgSpeedNotifiUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayColor"
                    android:layout_marginStart="4sp"
                    android:text="km/h"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayColor"
                    android:gravity="center"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp"
                    android:text="Max.Speed: "/>
                <TextView
                    android:id="@+id/maxSpeedNotifi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="1"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"/>
                <TextView
                    android:id="@+id/maxSpeedNotifiUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/grayColor"
                    android:layout_marginStart="4sp"
                    android:text="km/h"
                    android:textSize="11sp"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>